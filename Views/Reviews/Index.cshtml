@model BookingHomestay.ViewModels.ReviewListViewModel

@{
    ViewData["Title"] = "Danh sách đánh giá";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Danh sách đánh giá</h2>

    <!-- Form tìm kiếm -->
    <form method="get" asp-action="Index">
        <div class="form-group">
            <label for="search">Tìm kiếm</label>
            <input type="text" id="search" name="search" class="form-control" value="@Model.Search" placeholder="Tìm theo tên khách hàng, phòng, hoặc tiêu đề" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success">Thêm đánh giá mới</a>
            }
        </div>
    </form>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- Danh sách đánh giá -->
    <h3 class="mt-4">Danh sách đánh giá tìm được</h3>
    <div class="row">
        @if (Model.Reviews.Any())
        {
            @foreach (var review in Model.Reviews)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@review.Title</h5>
                            <p class="card-text">
                                <strong>Phòng:</strong> @review.Room?.RoomName<br />
                                <strong>Khách hàng:</strong> @review.Customer?.FullName<br />
                                <strong>Điểm:</strong> @review.Rating/5<br />
                                <strong>Nhận xét:</strong> @(review.Comment ?? "Không có nhận xét.")<br />
                                <strong>Trạng thái:</strong> @review.Status<br />
                                <strong>Ngày:</strong> @review.ReviewDate.ToString("dd/MM/yyyy")
                            </p>
                            <a asp-action="Details" asp-route-id="@review.ReviewId" class="btn btn-info">Chi tiết</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@review.ReviewId" class="btn btn-warning">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@review.ReviewId" class="btn btn-danger">Xóa</a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Không tìm thấy đánh giá nào.</p>
        }
    </div>

    <!-- Phân trang -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@Model.Search">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@Model.Search">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@Model.Search">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 3000);
        });
    </script>
}