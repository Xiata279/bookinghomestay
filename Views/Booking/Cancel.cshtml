@model BookingHomestay.Models.Booking

@{
    ViewData["Title"] = "Hủy đặt phòng";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Hủy đặt phòng</h2>

    @if (Model == null)
    {
        <p class="text-center text-danger">Đặt phòng không tồn tại.</p>
        <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h4>Xác nhận hủy đặt phòng: @Model.BookingId</h4>
            </div>
            <div class="card-body">
                <p><strong>Phòng:</strong> @(Model.Room != null ? Model.Room.RoomName : "Không xác định")</p>
                <p><strong>Khách hàng:</strong> @(Model.Customer != null ? Model.Customer.FullName : "Không xác định")</p>
                <p><strong>Ngày nhận phòng:</strong> @Model.CheckInDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Ngày trả phòng:</strong> @Model.CheckOutDate.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Tổng giá:</strong> @Model.TotalPrice.ToString("N0") VNĐ</p>
                <p class="text-danger">Bạn có chắc chắn muốn hủy đặt phòng này không?</p>
            </div>
            <div class="card-footer">
                <form asp-action="CancelConfirmed" method="post">
                    <input type="hidden" asp-for="BookingId" />
                    <button type="submit" class="btn btn-danger">Xác nhận hủy</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
                </form>
            </div>
        </div>
    }
</div>