@model IEnumerable<BookingHomestay.Models.Promotion>
@{
    ViewData["Title"] = "Danh sách khuyến mãi";
}
<div class="container py-5">
    <h2 class="text-center mb-4">Danh sách khuyến mãi</h2>
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo mã hoặc mô tả" value="@ViewData["Search"]" />
            <button type="submit" class="btn btn-primary">Tìm</button>
            <a asp-action="Create" class="btn btn-success ms-2">Thêm khuyến mãi mới</a>
        </div>
    </form>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Mã khuyến mãi</th>
                <th>Phần trăm giảm</th>
                <th>Ngày bắt đầu</th>
                <th>Ngày kết thúc</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var promotion in Model)
                {
                    <tr>
                        <td>@promotion.PromotionCode</td>
                        <td>@promotion.DiscountPercent%</td>
                        <td>@promotion.StartDate.ToString("dd/MM/yyyy")</td>
                        <td>@promotion.EndDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@promotion.PromotionId" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@promotion.PromotionId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" class="text-center">Không có khuyến mãi nào.</td></tr>
            }
        </tbody>
    </table>
    @if ((int)ViewData["TotalPages"] > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if ((int)ViewData["CurrentPage"] > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] - 1)" asp-route-search="@ViewData["Search"]">Previous</a>
                    </li>
                }
                @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                {
                    <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewData["Search"]">@i</a>
                    </li>
                }
                @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] + 1)" asp-route-search="@ViewData["Search"]">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () { $('.alert').fadeOut('slow'); }, 3000);
        });
    </script>
}