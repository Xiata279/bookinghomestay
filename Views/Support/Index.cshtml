@model BookingHomestay.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Hỗ trợ";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Hỗ trợ khách hàng</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Index" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập họ tên của bạn" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="5" placeholder="Nhập tin nhắn của bạn" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Gửi yêu cầu hỗ trợ</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-5">
        <h4 class="text-center mb-3">Các cách liên hệ khác</h4>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <i class="fas fa-envelope"></i> Email: <a href="mailto:nguyenthanhluan270904@gmail.com">nguyenthanhluan270904@gmail.com</a>
            </li>
            <li class="list-group-item">
                <i class="fas fa-phone"></i> Số điện thoại: <a href="tel:+8433934268">+8433934268</a>
            </li>
            <li class="list-group-item">
                <i class="fab fa-facebook-messenger"></i> Messenger: <a href="https://www.facebook.com/LuanEm2709" target="_blank">Chat với chúng tôi trên Messenger</a>
            </li>
        </ul>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}