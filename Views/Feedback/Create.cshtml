@model BookingHomestay.Models.Feedback

@{
    ViewData["Title"] = "Gửi phản hồi";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Gửi phản hồi</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Content" class="form-label">Nội dung</label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="form-label">Đánh giá (1-5)</label>
                    <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label">Trạng thái</label>
                    <select asp-for="Status" class="form-control">
                        <option value="Pending">Chờ xử lý</option>
                        <option value="Approved">Đã duyệt</option>
                        <option value="Rejected">Đã từ chối</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}