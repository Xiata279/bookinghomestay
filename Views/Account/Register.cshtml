@model BookingHomestay.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="form-box register">
        <h1>Đăng ký</h1>
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div class="input-box">
                <input asp-for="Username" type="text" placeholder="Tên đăng nhập" required />
                <i class='bx bxs-user'></i>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Email" type="email" placeholder="Email" required />
                <i class='bx bxs-envelope'></i>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Mật khẩu" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="ConfirmPassword" type="password" placeholder="Xác nhận mật khẩu" required />
                <i class='bx bxs-lock-alt'></i>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="input-box">
                <input asp-for="Phone" type="text" placeholder="Số điện thoại" required />
                <i class='bx bxs-phone'></i>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Đăng ký</button>
            <p>hoặc đăng ký bằng nền tảng xã hội</p>
            <div class="social-icons">
                <a href="#"><i class='bx bxl-google'></i></a>
                <a href="#"><i class='bx bxl-facebook'></i></a>
                <a href="#"><i class='bx bxl-github'></i></a>
                <a href="#"><i class='bx bxl-linkedin'></i></a>
            </div>
            <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập ngay</a></p>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}