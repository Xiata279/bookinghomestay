@model BookingHomestay.ViewModels.StaffViewModel

@{
    ViewData["Title"] = "Tạo nhân viên mới";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Tạo nhân viên mới</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-3">
            <div class="col-md-6 form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" placeholder="Nhập vai trò" required />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="HotelId" class="control-label"></label>
                <select asp-for="HotelId" class="form-control" asp-items="@(new SelectList(ViewData["Hotels"] as List<BookingHomestay.Models.Hotel>, "HotelId", "HotelName"))">
                    <option value="">Chọn khách sạn</option>
                </select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>
            <div class="col-md-12 text-center mt-3">
                <button type="submit" class="btn btn-primary">Tạo nhân viên</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}