@model IEnumerable<BookingHomestay.Models.Staff>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Danh sách nhân viên</h2>

    <!-- Form tìm kiếm -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên, email, số điện thoại hoặc vai trò" value="@ViewData["Search"]" />
            <button type="submit" class="btn btn-primary">Tìm</button>
            <a asp-action="Create" class="btn btn-success ms-2">Thêm nhân viên mới</a>
        </div>
    </form>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @TempData["ErrorMessage"]
        </div>
    }

    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Họ tên</th>
                <th>Vai trò</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Khách sạn</th>
                <th>Ngày tạo</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var staff in Model)
                {
                    <tr>
                        <td>@staff.FullName</td>
                        <td>@staff.Role</td>
                        <td>@staff.Email</td>
                        <td>@staff.Phone</td>
                        <td>@(staff.Hotel?.HotelName ?? "Không có khách sạn")</td>
                        <td>@staff.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@staff.StaffId" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@staff.StaffId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">Không có nhân viên nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    @if ((int)ViewData["TotalPages"] > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if ((int)ViewData["CurrentPage"] > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] - 1)" asp-route-search="@ViewData["Search"]">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= (int)ViewData["TotalPages"]; i++)
                {
                    <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@ViewData["Search"]">@i</a>
                    </li>
                }

                @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] + 1)" asp-route-search="@ViewData["Search"]">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('.alert').fadeOut('slow');
            }, 3000);
        });
    </script>
}