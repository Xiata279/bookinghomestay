@model IEnumerable<BookingHomestay.Models.Hotel>

@{
    ViewData["Title"] = "Danh sách khách sạn";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Danh sách khách sạn</h2>

    <!-- Form tìm kiếm -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <!-- Dòng 45: Kiểm tra null cho ViewData["Search"] -->
            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên khách sạn hoặc địa điểm" value="@(ViewData["Search"]?.ToString() ?? "")" />
            <button type="submit" class="btn btn-primary">Tìm</button>
            <a asp-action="Create" class="btn btn-success ms-2">Thêm khách sạn mới</a>
        </div>
    </form>

    <!-- Hiển thị thông báo -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }

    <!-- Danh sách khách sạn -->
    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Tên khách sạn</th>
                <th>Địa điểm</th>
                <th>Mô tả</th>
                <th>Hình ảnh</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var hotel in Model)
                {
                    <tr>
                        <td>@hotel.HotelName</td>
                        <td>@(hotel.Location != null ? hotel.Location.City : "Không xác định")</td>
                        <td>@(hotel.Description ?? "Không có mô tả")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(hotel.ImageUrl))
                            {
                                <img src="@hotel.ImageUrl" alt="@hotel.HotelName" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span>Không có hình ảnh</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@hotel.HotelId" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@hotel.HotelId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">Không có khách sạn nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    <!-- Dòng 49: Kiểm tra null cho ViewData["TotalPages"] -->
    @if (ViewData["TotalPages"] != null && (int)ViewData["TotalPages"] > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Dòng 52: Kiểm tra null cho ViewData["CurrentPage"] -->
                @if (ViewData["CurrentPage"] != null && (int)ViewData["CurrentPage"] > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@((int)ViewData["CurrentPage"] - 1)" asp-route-search="@(ViewData["Search"]?.ToString() ?? "")">Previous</a>
                    </li>
                }

                <!-- Dòng 56: Vòng lặp phân trang -->
                @for (int i = 1; i <= (ViewData["TotalPages"] != null ? (int)ViewData["TotalPages"] : 0); i++)
                {
                    <!-- Dòng 58: Kiểm tra null cho ViewData["CurrentPage"] -->
                    <li class="page-item @(i == (ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] : 0) ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@(ViewData["Search"]?.ToString() ?? "")">@i</a>
                    </li>
                }

                <!-- Dòng 63: Kiểm tra null cho ViewData["CurrentPage"] và ViewData["TotalPages"] -->
                @if (ViewData["CurrentPage"] != null && ViewData["TotalPages"] != null && (int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
                {
                    <!-- Dòng 66: Kiểm tra null cho ViewData["CurrentPage"] và ViewData["Search"] -->
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] + 1 : 1)" asp-route-search="@(ViewData["Search"]?.ToString() ?? "")">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () { $('.alert').fadeOut('slow'); }, 3000);
        });
    </script>
}